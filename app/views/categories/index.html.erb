<h1>Categorias</h1>

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>
          <form class="form-inline">
            <%= link_to 'Ver', category, class:'btn btn-success' %>
            <%= link_to 'Editar', edit_category_path(category), class:'btn btn-primary'%>
            <%= link_to 'Remover', category, method: :delete, data: { confirm: 'Tem certeza que deseja deletar este item?' }, class:'btn btn-danger'%>
          </form>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova categoria', new_category_path %>
